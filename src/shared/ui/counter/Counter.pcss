.counter {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  row-gap: 10px;

  &__button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding-inline: 10px;

    &:hover {
      color: var(--color-accent);
    }

    &:active {
      opacity: 0.5;
    }
  }
}
